<include file="Header/header" />
<include file="Header/nav" />
<body data-id="Class|index">
<include file="Sider/class_left" />
<div class="row col-md-10 ">

    <!--
    <form style="margin-bottom: 10px" class="form-inline" role="form" action="./">
        <div class="form-group">
            <div class="input-group">
                <input class="form-control" type="text" name="query" placeholder="{$query}">
            </div>
            <div class="input-group">
                <button type="submit" class="btn btn-info">搜索</button>
            </div>
            <a class="btn btn-info" style="margin-left: 520px" href="{:U('User/addUser')}">+添加用户</a>

        </div>
    </form>
    -->

    <div class="panel panel-info" style="font-size: 12px">
        <table class="table  table-bordered ">
            <tr class=" panel-heading">
                <th>目录ID</th>
                <th>分类</th>
                <th>商品数</th>
                <th>排序</th>
                <th>首页推荐</th>
                <th>类型</th>
                <th>操作</th>
            </tr>
            <volist name="classList" id="cl">
                <tr data-id="{$cl.id}" data-father="{$cl.father}" >
                    <td>{$cl.id}</td>
                    <td>{$cl.title}</td>
                    <td>{$cl.num}</td>
                    <td>{$cl.order}</td>
                    <td>{$cl.hot}</td>
                    <td>{$cl.moduleTitle}</td>
                    <if condition="$cl.father eq -1">
                        <td></td>
                    <else/>
                        <td>
                            <a class="btn-link btn-danger" onclick="deleteNode(this)" href="#" ><button type="button" class="btn btn-xs btn-danger">删除分类</button></a>
                            <a class="btn-link btn-warning" href="{:U('Class/modClass')}?id={$cl.id}"><button type="button" class="btn btn-xs btn-info ">修改</button></a>
                            <a class="btn-link btn-warning" href="{:U('Product/addProduct')}?classId={$cl.id}"><button type="button" class="btn btn-xs btn-info ">添加商品</button></a>
                            <a class="btn-link btn-warning" href="{:U('Product/addMatch')}?classId={$cl.id}"><button type="button" class="btn btn-xs btn-info ">添加搭配</button></a>
                        </td>
                    </if>
                </tr>
            </volist>

        </table>
    </div>
</div>
</body>

<include file="Footer/footer" />