<body data-id="Setting|aboutUs">
<include file="Sider/setting_left" />
<div class="container margin-top">
    <div class="col-md-9 panel padding-0 panel-info">
        <div class="panel-heading ">
            <h2 class="panel-title">关于我们</h2>
        </div>

        <!--表单-->
        <form id="site"   class="form-horizontal margin-top"  method="post" >

            
            <div class="form-group">
                <label for="" class="col-sm-3 control-label">About Us:</label>

                <div class="content">
                    <script id="editor" type="text/plain" class="col-md-10 col-md-offset-1 margin-top" style="height:500px;">{$aboutUs.info}</script>
                    <input type="hidden" id="info" value=""/>
                </div>
            </div>



            <div class="form-group text-center ">
                <button  id='modSite' onclick="modAboutUs();return false;" class="btn btn-primary text-center"  >保存</button>

            </div>

        </form>
    </div>
</div>
</body>

<include file="Footer/footer" />
<script src="http://malsup.github.io/jquery.form.js"></script>
<script>
    

     UE.getEditor('editor');//默认加载


    //提交表单
    function modAboutUs(){

        $('#info').val(UE.getEditor('editor').getContent());

        if(submitForm('./ajaxModAboutUs')){
            return false;
         }else{
            return false;
        }
    }




</script>